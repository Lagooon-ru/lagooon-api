{{#> simple}}
  {{#*inline "content"}}
    {{#if id}}
      <div class="container">
        <div class="row justify-content-center">
          <div class="col col-lg-6 mt-200">
            <div class="jumbotron">
              <h1 class="display-4">Your email address was verified successfully.</h1>
              <p class="lead">Please go on next step.</p>
              <hr class="my-4">
              <p>If you have any question for Lagooon app, please look at the documentation</p>
              <a class="btn btn-primary btn-lg" href="/" role="button">Learn More</a>
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <div class="container">
        <div class="row justify-content-center">
          <div class="col col-lg-6 mt-200">
            <div class="jumbotron">
              <h1 class="display-4">Invalid Token!</h1>
              <p class="lead">This token is invalid or expired. Please try again with your correct url.</p>
              <hr class="my-4">
              <p>If you are going to learn more about it, please try to look for this link</p>
              <a class="btn btn-primary btn-lg" href="/" role="button">Learn more</a>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  {{/inline}}
{{/simple}}